{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Pixel.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/Pixel.Tests/Pixel.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "test with coverage",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=opencover",
                "/p:CoverletOutput=../coverage.opencover.xml",
                "${workspaceFolder}/Pixel.Tests/Pixel.Tests.csproj",
                "&&",
                "DOTNET_ROOT=/opt/dotnet",
                "$HOME/.dotnet/tools/reportgenerator",
                "-reports:${workspaceFolder}/coverage.opencover.xml",
                "-targetdir:${workspaceFolder}/coverage"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "open report",
            "command": "xdg-open",
            "type": "shell",
            "args": [
                "./coverage/index.htm"
            ],
            "dependsOn": "test with coverage"
        }
    ]
}
