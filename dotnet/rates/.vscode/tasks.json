{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "TERM=xterm dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/App/App.csproj",
                "-c",
                "Debug",
                "&&",
                "cp",
                "${workspaceFolder}/App/bin/Debug/App.xml",
                "${workspaceFolder}/App/wwwroot/docs/App.xml"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build: release",
            "command": "TERM=xterm dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/App/App.csproj",
                "-c",
                "Release",
                "&&",
                "cp",
                "${workspaceFolder}/App/bin/Release/App.xml",
                "${workspaceFolder}/App/wwwroot/docs/App.xml"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        }
    ]
}
